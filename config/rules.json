{
    "parsing": {
        "known_aggregates": ["count", "sum", "avg", "min", "max", "string_agg", "array_agg", "json_agg", "jsonb_agg"]
    },
    "validation": {
        "enabled": true,
        "forbidden_statements": ["DropStmt", "TruncateStmt", "CreateStmt", "DoStmt"],
        "forbidden_functions": ["pg_sleep", "pg_read_file", "crosstab", "current_setting"]
    },
    "transformation": {
        "enabled": true,
        "allowed_statements": ["SelectStmt"],
        "rules": {
            "tenant_injection": {
                "enabled": true,
                "target_column": "tenant_id"
            }
        }
    }
}